{{> header}}
<!-- The logIn Section -->
<div class="w3-black" id="login">
    <div class="w3-container w3-content w3-padding-64" style="max-width:800px">
        <h2 class="w3-wide w3-center">INICIAR SESIÓN</h2>
        <p class="w3-opacity w3-center"><i>¡Ingresá para ver todo nuestro contenido!</i></p><br>
        <div class="w3-container">
            <form action="/validar/controlarSesion" method="post">
                <p><label for="mail"><i class="fa fa-user"></i> Usuario</label></p>
                <input class="w3-input w3-border" name="mail" id="mail" type="email" placeholder="email@email.com">

                <p><label for="pass"><i class="fa  fa-key"></i> Contraseña</label></p>
                <input class="w3-input w3-border" name="pass" id="pass" type="password" placeholder="*******">

                <button type="submit" class="w3-button  w3-black w3-padding-16 w3-section">Iniciar sesión</button>

                <a href="/registry" class="w3-text-white w3-hover-text-black"><div class="w3-button w3-black w3-padding-16 w3-section w3-right">Registrarse</div></a>
            </form>
        </div>
    </div>
</div>
{{> footer}}