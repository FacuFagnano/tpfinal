{{#logueado}}
  {{> headerLogueado}}

    <h2 class="w3-center w3-padding-64">Suscripciones Nuevas</h2>
  {{#noneSubscription}}
    <form class="w3-container w3-center" action="/suscripcion/registerSubscription" method="POST">
      <div class="w3-row-padding w3-padding w3-center" id="food">

              <div class="w3-quarter">
                <a href="/Edicion"><img src="{{dailyImageUrl}}" class="w3-image w3-margin-top" width="335" height="471"></a>
                <h3>{{dailyName}}</h3>
                <p>{{dailyDescription}}</p>
                <div class="w3-container w3-center">
                  <p>Precio: ${{dailyPrice}}</p>
                  <button class="w3-button w3-green w3-center w3-margin">Suscribirse</button>
                  <input id="dailyId" name="dailyId" type="hidden" value="{{dailyId}}">
                </div>
              </div>

      </div>
     </form>
     {{/noneSubscription}}




{{/logueado}}
{{^logueado}}
  {{> header}}


<!-- The App Section -->
<div class="w3-padding-64 w3-white">
  <div class="w3-row-padding">
    <div class="w3-col l8 m6">
     <h1 class="w3-xxxlarge w3-text-green"><b>No puedes visualizar las revistas o diarios sin suscribirse..</b></h1>
