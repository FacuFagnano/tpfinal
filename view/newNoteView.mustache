<!-- The newNote Section -->
<div class="w3-container w3-padding-64 w3-white w3-margin w3-center">
            <h3>Redactá tu propia nota</h3>

            <form class="w3-container" action="/newnote/sendnote" method="post" enctype="multipart/form-data">
                  <p class="w3-left-align">
                  <label for="title">Título</label>
                  <input class="w3-input w3-margin-top w3-animate-input" type="text" name="title" id="title" style="width:30%" required>
                  </p>

                  <p class="w3-left-align">
                  <label for="image">Imagen</label>
                  <input class="w3-input w3-margin-top" type="file" id="image" name="image" style="width: 30%" required>
                  </p>

                  <p class="w3-left-align">
                  <label for="note">Escribí tu nota:</label>
                  <textarea class="w3-input w3-margin-top w3-animate-input" type="text" name="note" id="note" style="width: 30%; height: 200px; resize:none" required>
                  </textarea>
                  </p >

                  <p class="w3-left-align" style="width:30%">
                      <select class="w3-select w3-border" name="daily">
                        <option value="" disabled selected>Diario a publicar</option>
                      {{#dailys}}
                        <option value="{{dailyId}}">{{dailyName}}</option>
                      {{/dailys}}
                      </select>
                  </p >

                  <p class="w3-left-align" style="width:30%">
                      <select class="w3-select w3-border" name="edition">
                        <option value="" disabled selected>Edición a publicar</option>
                      {{#editions}}
                        <option value="{{editionId}}">{{editionDescription}}</option>
                      {{/editions}}
                      </select>
                  </p >

                  <p class="w3-left-align" style="width:30%">
                      <select class="w3-select w3-border" name="section">
                        <option value="" disabled selected>Sección a publicar</option>
                      {{#sections}}
                        <option value="{{sectionId}}">{{sectionDescription}}</option>
                      {{/sections}}
                      </select>
                  </p >

                  <p>
                  <button type="submit" class="w3-button  w3-black w3-padding-16 w3-section">Enviar nota</button>
                  </p>
            </form>


</div>

{{/logueado}}
{{^logueado}}
  {{> header}}


